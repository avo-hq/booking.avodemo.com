<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-6">
  <div class="max-w-lg w-full bg-white border border-gray-300 p-8 rounded-lg">
    <div>
      <h2 class="text-2xl font-extrabold text-gray-900">
        Log in to your account
      </h2>
      <p class="text-zinc-600 text-base">You're one step away from your next workspace</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-4 space-y-6" }) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, value: "avo@cado.com", autocomplete: "email",
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-zinc-500 focus:border-zinc-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, value: "password", autocomplete: "off",
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-rose-500 focus:border-rose-500 sm:text-sm" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-rose-600 border-gray-300 rounded focus:ring-0 focus:ring-offset-0" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
          </div>
        <% end %>
      </div>

      <div>
        <%= f.submit "Log in", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-rose-600 hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500" %>
      </div>
    <% end %>
  </div>
</div>