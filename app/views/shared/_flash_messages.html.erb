<% if flash.any? %>
  <div data-controller="toast" 
       class="fixed top-20 right-4 z-50 flex flex-col gap-4">
    <% flash.each do |type, message| %>
      <% flash_type = { 
        "notice" => "bg-blue-50 text-blue-800 border-blue-200",
        "success" => "bg-green-50 text-green-800 border-green-200",
        "error" => "bg-red-50 text-red-800 border-red-200",
        "alert" => "bg-yellow-50 text-yellow-800 border-yellow-200"
      } %>
      
      <div data-toast-target="toast" 
           class="w-80 transform translate-x-full transition-transform duration-300 ease-in-out">
        <div class="<%= flash_type[type.to_s] || flash_type['notice'] %> px-4 py-3 rounded-lg shadow-lg border flex items-center justify-between">
          <div class="flex items-center">
            <% case type.to_s %>
            <% when "notice" %>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
            <% when "success" %>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            <% when "error" %>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            <% when "alert" %>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
            <% end %>
            <p class="text-sm"><%= message %></p>
          </div>
          <button data-action="click->toast#dismiss" 
                  class="ml-4 text-current opacity-50 hover:opacity-75">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>
    <% end %>
  </div>
<% end %>