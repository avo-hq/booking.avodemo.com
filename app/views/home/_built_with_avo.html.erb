  <div class="max-w-screen-xl mx-auto rounded-xl py-12 px-10 bg-gradient-to-b from-azure-400 to-azure-600 relative overflow-hidden">
    <div>
      <%= image_tag "avo-logo.png", class: "w-12 mb-3" %>
