<div class="group relative bg-white border border-zinc-200 rounded-xl overflow-hidden">
  <div class="w-full h-48 overflow-hidden relative">
    <% if location.photo.attached? %>
      <%= image_tag location.photo, 
          class: "w-full h-full object-cover" %>
    <% else %>
      <div class="w-full h-full bg-gray-200 flex items-center justify-center">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    <% end %>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/60"></div>
    <div class="absolute bottom-2 left-1.5 flex items-center space-x-1 text-sm text-zinc-100">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <span class="text-sm">Bucharest</span>
    </div>
  </div>

  <div class="px-3 py-4">
    <h3 class="text-base font-semibold text-gray-900 mb-1">
      <%= location.name %>
    </h3>
    <p class="text-zinc-600 text-sm line-clamp-2 mb-4">
      <%= location.description %>
    </p>

    <div class="flex items-center justify-between mt-auto">
      <%= link_to location_path(location), 
          class: "inline-flex items-center text-zinc-800 hover:text-zinc-900 transition-colors duration-300 font-semibold text-xs underline" do %>
        View Details
      <% end %>
    </div>
  </div>
</div>